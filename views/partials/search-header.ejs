<header>
  <label for="search" class="sr-only"
    >Search for a movie, tv show, or actor</label
  >
  <input
    class="search-field"
    type="search"
    name="search"
    id="search"
    placeholder="Search..."
  />
  <button class="btn-search"><span class="hamburger"></span></button>
  <section class="search-results no-display">
    <h4 class="section-header">Movies</h4>
    <ul class="results-list" id="movie-results"></ul>
    <p>
      <a href="" class="see-more-link" id="movie-results-link"
        >See More Results >></a
      >
    </p>
    <h4 class="section-header">TV Shows</h4>
    <ul class="results-list" id="tv-results"></ul>
    <p>
      <a href="" class="see-more-link" id="tv-results-link"
        >See More Results >></a
      >
    </p>
  </section>
</header>
